initKeyboard(); function initKeyboard() {
 // Create keyboard buttons dynamically from keyboard data array
 keyboardData.forEach(function(key) {
  var btn = document.createElement('div');
  btn.id = key.id;
  btn.innerHTML = key.label;
  
  // Assign appropriate CSS class based on width
  if (key.width === 28) {
   btn.className = 'k1';
  } else if (key.width === 40) {
   // Check if it's the ENTER key specifically
   if (key.id === 'enter') {
    btn.className = 'k-enter';  // ENTER key
   } else {
    btn.className = 'k-ctrl';  // CAPS key and other 40px keys
   }
  } else if (key.width === 52) {
   btn.className = 'k2';
  } else if (key.width === 81) {
   btn.className = 'k-space';  // SPACE key
  } else if (key.width === 109) {
   btn.className = 'k4';
  }
  
  // Set explicit width for custom-sized keys
  if (key.width === 40 || key.width === 81) {
   btn.style.width = key.width + 'px';
  }
  
  // Reduce font size for CTRL and ALT keys to fit text better
  if (key.id === 'ctrl' || key.id === 'alt') {
   btn.style.fontSize = '9px';
  }
  
  // Position the button
  btn.style.left = key.x + 'px';
  btn.style.top = key.y + 'px';
  
  // Add click handler
  btn.onclick = function() { button(key.keyCode); };
  
  // Append to keyboard container
  document.getElementById('keyboard-container').appendChild(btn);
 });
 
 // Position the QPC and other elements
 document.getElementById("qpc").style.top = "32px"; 
 document.getElementById("qpc").style.left = "32px";
}

// Create a mapping from keyCode to element ID for quick lookup
var keyCodeToId = {};
keyboardData.forEach(function(key) {
  keyCodeToId[key.keyCode] = key.id;
});

// Store timeout IDs for each key to handle rapid key presses
var keyTimeouts = {};

// Function to highlight a virtual key
function highlightKey(keyCode) {
  var elementId = keyCodeToId[keyCode];
  if (!elementId) return; // Key not in virtual keyboard
  
  var element = document.getElementById(elementId);
  if (!element) return; // Element not found
  
  // Clear any existing timeout for this key to prevent race conditions
  if (keyTimeouts[elementId]) {
    clearTimeout(keyTimeouts[elementId]);
  }
  
  // Apply hover effect (using the same color as :hover in CSS)
  element.style.backgroundColor = '#444';
  
  // Set a timeout to restore original color
  keyTimeouts[elementId] = setTimeout(function() {
    unhighlightKey(elementId);
    delete keyTimeouts[elementId]; // Clean up timeout reference
  }, 200); // 200ms flash effect
}

// Function to unhighlight a virtual key
function unhighlightKey(elementId) {
  var element = document.getElementById(elementId);
  if (!element) return;
  
  // Restore original background by clearing inline style
  // This allows CSS stylesheet rules to take effect again
  element.style.backgroundColor = '';
}

tiles(); function tiles() {
 Z=0;
 for (Y=0; Y<=mapy; Y++) {
  for (X=0; X<=mapx; X++) {
   T=document.createElement("img");
   T.id="T"+Z; T.src="t/Ga.png"; 
   T.height=32; T.width=32;
   T.className="tile";
   T.onmousedown=new Function("ClickTile("+(Z)+",this.parentNode)");     
   document.body.appendChild(T);
   Z++;
  }
 }
}



resize(); function resize() {
 // Position text element based on mode
 if (mode=="gfx") {
  up=32+(404-(document.getElementById('txt').offsetHeight));
  left=32+22+300;
  document.getElementById("txt").style.left=left+"px";
  document.getElementById("txt").style.top=up+"px";
 } else {
  left=32+22;
  up=32+(402-(document.getElementById('txt').offsetHeight));
  document.getElementById("txt").style.left="54px";
  document.getElementById("txt").style.top=up+"px";
 }
 const textElement=document.getElementById("txt");
 textElement.scrollTop=textElement.scrollHeight;
 Z=0; for (Y=0; Y<=mapy; Y++) {
  for (X=0; X<=mapx; X++) {
   e=document.getElementById("T"+Z).style.top=50+(Y*32)+"px";  
   e=document.getElementById("T"+Z).style.left=54+(X*32)+"px"; 
   Z++;
  }
 }
}

document.addEventListener('keydown', function (event) { press(event); });
document.addEventListener('keyup', function (event) { pressup(event); });
document.addEventListener('paste', function (event) {
 if (keyon) {
  event.preventDefault();
  var pastedText;
  if (event.clipboardData && event.clipboardData.getData) {
   pastedText = event.clipboardData.getData('text/plain');
  } else if (window.clipboardData && window.clipboardData.getData) {
   pastedText = window.clipboardData.getData('Text');
  }
  if (pastedText) {
   line += pastedText;
   cursorPos = line.length; // Update cursor position to end
   updateDisplay();
   // Scroll to bottom to show cursor
   const textElement = document.getElementById("txt");
   textElement.scrollTop = textElement.scrollHeight;
  }
 }
});
function press(event) { 
 key=""; k=event.keyCode; shift=event.shiftKey;
 if (event.keyCode === 18 || event.altKey) { event.preventDefault(); }
 if (event.keyCode === 27) { event.preventDefault(); }
 if (event.keyCode === 17 && !ctrl) {
  ctrl=1; ctrlPhysical=true;
  document.getElementById("ctrl").style.backgroundColor = "#0a0";
  document.getElementById("ctrl").style.color = "#000";
  return;
 }
 if (event.keyCode === 18 && !alt) {
  alt = 1; altPhysical = true; document.getElementById("alt").style.backgroundColor = "#0a0";
  document.getElementById("alt").style.color = "#000";
 }
 // Handle Ctrl+C for copy
 if (event.ctrlKey && event.key === 'c') {
  event.preventDefault();
  if (selectionStart !== -1 && selectionEnd !== -1) {
   const start = Math.min(selectionStart, selectionEnd);
   const end = Math.max(selectionStart, selectionEnd);
   const selectedText = line.substring(start, end);
   navigator.clipboard.writeText(selectedText).then(() => {
    print("\x1b[32mCopied to clipboard!\x1b[0m\n");
   }).catch(err => {
    print("\x1b[31mCopy failed\x1b[0m\n");
   });
  } else if (line.length > 0) {
   // Copy entire line if no selection
   navigator.clipboard.writeText(line).then(() => {
    print("\x1b[32mCopied entire input to clipboard!\x1b[0m\n");
   }).catch(err => {
    print("\x1b[31mCopy failed\x1b[0m\n");
   });
  }
  return;
 }
 
 if (event.ctrlKey) { return; }
 highlightKey(k);
 button(k);
}

function pressup(event) {
 // Prevent browser from handling ALT key - must be done before any conditionals
 if (event.keyCode === 18 || event.altKey) {
  event.preventDefault(); // Prevent browser menu from opening
 }
 
 // Handle physical CTRL key release (unhighlight)
 if (event.keyCode === 17 && ctrlPhysical) {
  ctrl = 0;
  ctrlPhysical = false;
  document.getElementById("ctrl").style.backgroundColor = "#222";
  document.getElementById("ctrl").style.color = "#fff";
  return;
 }
 
 // Handle physical ALT key release (unhighlight)
 if (event.keyCode === 18 && altPhysical) {
  alt = 0;
  altPhysical = false;
  document.getElementById("alt").style.backgroundColor = "#222";
  document.getElementById("alt").style.color = "#fff";
  return;
 }
 
 // Route keyup to active script if run is set
 if (run && typeof keyup !== 'undefined') {
  var k = String.fromCharCode(event.keyCode);
  keyup(k);
 }
}

function button(b) {
  // If pagination paused, resume (existing behavior)
  if (paginationPaused) { resumePagination(); return; }

  // Map keycode to logical k and printable l (re-uses prior mapping)
  let k = "", l = "";
  // NOTE: keep the existing key mapping table here unchanged; for brevity we call the old mapping routine if present
  // If your file has a separate mapping, keep it. Otherwise include the mapping block from qandy3.htm here.
  // For this replacement assume mapping from earlier code still runs (the long switch you already have).
  // We'll call the existing mapping via a helper if present, otherwise fall back:
  if (typeof mapKeyCodeToKL === 'function') {
    ({k,l} = mapKeyCodeToKL(b, shift, caps)); // you can implement mapKeyCodeToKL as a small wrapper
  } else {
    // minimal mapping for navigation keys:
    switch (b) {
      case 37: k = "left"; break;
      case 38: k = "up"; break;
      case 39: k = "right"; break;
      case 40: k = "down"; break;
      case 36: k = "home"; break;
      case 35: k = "end"; break;
      case 27: k = "esc"; break;
      case 13: k = "enter"; break;
      case 8:  k = "back"; break;
      case 46: k = "delete"; break;
      case 20: k = "caps"; break;
      default:
        // printable characters: get the char from keyboardData mapping if available
        // fallback: use String.fromCharCode
        l = String.fromCharCode(b);
    }
  }

  // If mapping code left k empty and l empty, try fallback as printable
  if (!k && !l) l = String.fromCharCode(b || 0);

  // Helper to refresh only the visible input area (assumes input starts at row 0 of a multi-line input)
  function refreshInputWindow() {
    // Determine input start index for top-left of the input window (inputScrollPos) and rows occupied by the input
    const charsPerLine = screenWidth;
    const startIdx = inputScrollPos || 0;
    // We'll render one logical screen-height worth of input (or fewer rows depending on line length)
    const totalLines = Math.ceil(Math.max(1, line.length) / charsPerLine);
    for (let r = 0; r < Math.min(screenHeight, totalLines); r++) {
      const row = r; // you may offset if input lives on specific screen rows
      const segStart = startIdx + r * charsPerLine;
      writeInputLineSegmentToBuffer(row, segStart, charsPerLine);
    }
    // update selection visuals (if selection present)
    if (selectionStart !== -1 && selectionEnd !== -1) {
      updateSelectionVisuals(selectionStart, selectionEnd);
    }
    // recalc cursor coords & display
    syncCursorCoordsFromPos();
  }

  // Process special keys
  if (k === "left") {
    if (shift) {
      if (selectionStart === -1) selectionStart = cursorPos;
      selectionEnd = Math.max(0, cursorPos - 1);
    } else {
      selectionStart = -1; selectionEnd = -1;
    }
    if (cursorPos > 0) cursorPos--;
    refreshInputWindow();
    return;
  }

  if (k === "right") {
    if (shift) {
      if (selectionStart === -1) selectionStart = cursorPos;
      selectionEnd = Math.min(line.length, cursorPos + 1);
    } else {
      selectionStart = -1; selectionEnd = -1;
    }
    if (cursorPos < line.length) cursorPos++;
    refreshInputWindow();
    return;
  }

  if (k === "up") {
    // history if on first line, else move up in multi-line input
    const charsPerLine = screenWidth;
    const currentLine = Math.floor(cursorPos / charsPerLine);
    if (currentLine === 0 && !shift && keyon) {
      if (commandHistory.length > 0) {
        if (historyIndex === -1) { tempCommand = line; historyIndex = commandHistory.length; }
        if (historyIndex > 0) { historyIndex--; line = commandHistory[historyIndex]; cursorPos = line.length; inputScrollPos = 0; }
        refreshInputWindow();
      }
    } else {
      // multi-line up
      if (cursorPos >= charsPerLine) {
        cursorPos = cursorPos - charsPerLine;
        if (shift) {
          if (selectionStart === -1) selectionStart = cursorPos + charsPerLine;
          selectionEnd = cursorPos;
        } else { selectionStart = -1; selectionEnd = -1; }
        refreshInputWindow();
      }
    }
    return;
  }

  if (k === "down") {
    const charsPerLine = screenWidth;
    const totalLines = Math.ceil(Math.max(1, line.length) / charsPerLine);
    const currentLine = Math.floor(cursorPos / charsPerLine);
    if (currentLine >= totalLines - 1 && !shift && keyon) {
      if (historyIndex !== -1) {
        if (historyIndex < commandHistory.length - 1) { historyIndex++; line = commandHistory[historyIndex]; cursorPos = line.length; inputScrollPos = 0; }
        else { historyIndex = -1; line = tempCommand; cursorPos = line.length; inputScrollPos = 0; tempCommand = ""; }
        refreshInputWindow();
      }
    } else {
      if (cursorPos + charsPerLine <= line.length) {
        cursorPos = Math.min(line.length, cursorPos + charsPerLine);
        if (shift) {
          if (selectionStart === -1) selectionStart = cursorPos - charsPerLine;
          selectionEnd = cursorPos;
        } else { selectionStart = -1; selectionEnd = -1; }
        refreshInputWindow();
      }
    }
    return;
  }

  if (k === "home") {
    const charsPerLine = screenWidth;
    const currentLine = Math.floor(cursorPos / charsPerLine);
    const lineStart = currentLine * charsPerLine;
    if (shift) { if (selectionStart === -1) selectionStart = cursorPos; selectionEnd = lineStart; }
    else { selectionStart = -1; selectionEnd = -1; }
    cursorPos = lineStart;
    refreshInputWindow();
    return;
  }

  if (k === "end") {
    const charsPerLine = screenWidth;
    const currentLine = Math.floor(cursorPos / charsPerLine);
    const lineEnd = Math.min((currentLine + 1) * charsPerLine, line.length);
    if (shift) { if (selectionStart === -1) selectionStart = cursorPos; selectionEnd = lineEnd; }
    else { selectionStart = -1; selectionEnd = -1; }
    cursorPos = lineEnd;
    refreshInputWindow();
    return;
  }

  if (k === "back") {
    // backspace: delete char before cursor or delete selection
    if (selectionStart !== -1 && selectionEnd !== -1 && selectionStart !== selectionEnd) {
      const s = Math.min(selectionStart, selectionEnd), e = Math.max(selectionStart, selectionEnd);
      line = line.substring(0, s) + line.substring(e);
      cursorPos = s;
      selectionStart = -1; selectionEnd = -1;
    } else if (cursorPos > 0) {
      line = line.substring(0, cursorPos - 1) + line.substring(cursorPos);
      cursorPos--;
    }
    refreshInputWindow();
    return;
  }

  if (k === "delete") {
    if (selectionStart !== -1 && selectionEnd !== -1 && selectionStart !== selectionEnd) {
      const s = Math.min(selectionStart, selectionEnd), e = Math.max(selectionStart, selectionEnd);
      line = line.substring(0, s) + line.substring(e);
      cursorPos = s;
      selectionStart = -1; selectionEnd = -1;
    } else if (cursorPos < line.length) {
      line = line.substring(0, cursorPos) + line.substring(cursorPos + 1);
    }
    refreshInputWindow();
    return;
  }

  if (k === "enter") {
    if (keyon) {
      // add to history
      if (line.trim().length > 0) {
        if (commandHistory.length === 0 || commandHistory[commandHistory.length - 1] !== line) {
          commandHistory.push(line);
          if (commandHistory.length > maxHistorySize) commandHistory.shift();
        }
      }
      historyIndex = -1; tempCommand = "";
      if (run) {
        txt = txt + line + "<br>";
        input(line); line = ""; cursorPos = 0; inputScrollPos = 0;
        // render the cleared input area
        refreshInputWindow();
        print("");
      } else {
        inInputMode = true;
        // echo line using print (keeps backward compatibility)
        print(line); print("\n");
        inInputMode = false;
        // dispatch OS command path (existing logic)
        if (line.slice(-3) === ".js") {
          keyon = 0;
          txt = txt + line + "<br>";
          const prg = document.createElement('script'); prg.src = line;
          prg.onload = () => { keyon = 1; };
          prg.onerror = () => { print("Error loading program\n"); keyon = 1; };
          document.head.appendChild(prg); line = ""; cursorPos = 0; inputScrollPos = 0;
        } else if (line.substr(0,3) === "cls") {
          initScreen(); line = ""; cursorPos = 0; inputScrollPos = 0;
        } else if (line.substr(0,4) === "help") {
          showFiles(); line = "";
        } else {
          executeCode(line); line = ""; cursorPos = 0; inputScrollPos = 0;
        }
      }
    }
    refreshInputWindow();
    return;
  }

  // Default: printable characters (l contains printable char when available)
  if (l && keyon) {
    // if selection active, replace selection with typed char
    if (selectionStart !== -1 && selectionEnd !== -1 && selectionStart !== selectionEnd) {
      const s = Math.min(selectionStart, selectionEnd), e = Math.max(selectionStart, selectionEnd);
      line = line.substring(0, s) + l + line.substring(e);
      cursorPos = s + l.length;
      selectionStart = -1; selectionEnd = -1;
    } else {
      line = line.substring(0, cursorPos) + l + line.substring(cursorPos);
      cursorPos += l.length;
    }
    historyIndex = -1; tempCommand = "";
    refreshInputWindow();
    return;
  }

  // If we get here, no action; update cursor visual anyway
  syncCursorCoordsFromPos();
}
// Replace the existing function cursor(a) with this code:

function cursor(a) {
  // Ensure buffers exist
  if (!screenBuffer || !styleBuffer) {
    try { initScreen(); } catch (e) { /* best-effort */ }
  }

  // clamp logical coords
  const cx = Math.max(0, Math.min(screenWidth - 1, cursorX || 0));
  const cy = Math.max(0, Math.min(screenHeight - 1, cursorY || 0));

  // Ensure prevCursor object contains fields for restore
  if (!prevCursor) prevCursor = { set: false, x: 0, y: 0, inverse: false, ch: ' ', style: null };

  if (a === 1) {
    // Show cursor: if a previous cursor is set at a different position, restore it first
    if (prevCursor.set && !(prevCursor.x === cx && prevCursor.y === cy)) {
      // restore previous char & style
      if (screenBuffer[prevCursor.y] && styleBuffer[prevCursor.y] && styleBuffer[prevCursor.y][prevCursor.x]) {
        screenBuffer[prevCursor.y][prevCursor.x] = prevCursor.ch;
        styleBuffer[prevCursor.y][prevCursor.x] = prevCursor.style || {
          color: currentStyle.color,
          bgcolor: currentStyle.bgcolor,
          bold: currentStyle.bold,
          inverse: prevCursor.inverse
        };
        pokeCell(prevCursor.x, prevCursor.y);
      }
      prevCursor.set = false;
    }

    // Save the existing char and style at this new cursor cell
    if (!screenBuffer[cy]) {
      // ensure row exists
      screenBuffer[cy] = new Array(screenWidth).fill(' ');
    }
    if (!styleBuffer[cy]) {
      styleBuffer[cy] = [];
      for (let x = 0; x < screenWidth; x++) {
        styleBuffer[cy][x] = {
          color: currentStyle.color,
          bgcolor: currentStyle.bgcolor,
          bold: currentStyle.bold,
          inverse: currentStyle.inverse
        };
      }
    }

    const existingChar = (screenBuffer[cy][cx] === undefined || screenBuffer[cy][cx] === null) ? ' ' : screenBuffer[cy][cx];
    const existingStyle = styleBuffer[cy][cx] ? Object.assign({}, styleBuffer[cy][cx]) : {
      color: currentStyle.color,
      bgcolor: currentStyle.bgcolor,
      bold: currentStyle.bold,
      inverse: currentStyle.inverse
    };

    // Save for restore
    prevCursor = {
      set: true,
      x: cx,
      y: cy,
      inverse: !!existingStyle.inverse,
      ch: existingChar,
      style: existingStyle
    };

    // Write a full block into the buffer and set visually-contrasting style
    // Choose colors so the block is visible (black block on white bg or white block on black bg)
    // We'll set the glyph and invert colors: make foreground = existingStyle.bgcolor (if available)
    // and bgcolor = existingStyle.color
    screenBuffer[cy][cx] = '\u2588'; // full block glyph
    styleBuffer[cy][cx] = {
      color: existingStyle.bgcolor || 37,
      bgcolor: existingStyle.color || 40,
      bold: true,
      inverse: false
    };

    // Update just this cell in the DOM
    pokeCell(cx, cy);

    cursorOn = 1;

  } else {
    // Hide cursor: restore previous cell if we set one
    if (prevCursor && prevCursor.set) {
      const px = prevCursor.x, py = prevCursor.y;
      // restore char and style into buffers
      if (!screenBuffer[py]) {
        screenBuffer[py] = new Array(screenWidth).fill(' ');
      }
      screenBuffer[py][px] = prevCursor.ch;
      if (!styleBuffer[py]) styleBuffer[py] = [];
      styleBuffer[py][px] = prevCursor.style || {
        color: currentStyle.color,
        bgcolor: currentStyle.bgcolor,
        bold: currentStyle.bold,
        inverse: prevCursor.inverse
      };

      // update that cell
      pokeCell(px, py);

      prevCursor.set = false;
    }

    cursorOn = 0;
  }
}

function executeCode(code) {
  try {
    var trimmed = String(code).trim();
    var simpleNameRE = /^[$A-Za-z_][$A-Za-z0-9_]*(?:\s*\.\s*[$A-Za-z_][$A-Za-z0-9_]*)*$/;
    if (simpleNameRE.test(trimmed)) {
      try {
        var value = eval(trimmed);
      } catch (e) {
        print("Error: " + e.message + "\n\n");
        return false;
      }
      if (typeof value === "function") {
        print("ERROR: use: "+trimmed+"()\n\n");
        return true;
      }
      if (value !== undefined) { print(String(value) + "\n\n"); }
      return true;
    }
    var result = eval(code);
    if (result !== undefined) { print(String(result) + "\n\n"); }
    return true;
  } catch (error) {
    print("Error: " + error.message + "\n\n");
    return false;
  }
}

