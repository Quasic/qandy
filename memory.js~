
// video.js variables
window.screenBuffer = [];
window.cursorX = 0;
window.cursorY = 0;
window.cursorOn=0;

window.styleBuffer = [];
window.currentStyle = {
  color: 37,      // white foreground
  bgcolor: 40,    // black background
  bold: false,
  inverse: false
};

// gfx.js variables
window.txt="";
window.mode="txt"; // gfx or txt display
window.allowScriptESC=false; // if true, script handles ESC instead of universal termination

window.PopX=0;
window.PopY=0;
window.PopHide="hidden";
window.PopAlign="center";
window.PForce="hidden";
window.mapx=7;
window.mapy=11;
window.map="";

// keyboard.js variables
window.keyon=1;
window.caps=0;  // caps lock state: 0=lowercase, 1=uppercase, 2=extended graphics
window.shift=0; // shift key pressed  
window.ctrl=0;  // ctrl key pressed
window.alt=0;   // alt key pressed
window.ctrlPhysical=false;  // track if ctrl was activated by physical keyboard
window.altPhysical=false;   // track if alt was activated by physical keyboard
window.keyboard=1; // turn keyboard input on/off

window.line ="";
window.inputStartX=0;
window.inputStartY=0;
window.cursorPos=0;
window.inputScrollPos=0;

window.commandHistory = [];  // Array to store command history
window.historyIndex = -1;    // Current position in history (-1 = not browsing, typing new command)
window.maxHistorySize = 50;  // Maximum number of commands to remember
window.tempCommand = "";     // Temporary storage for command being typed when browsing history

window.selectionStart = -1;  // Start position of selection (-1 = no selection)
window.selectionEnd = -1;    // End position of selection
window.selectionBgColor = '#ffffff';   // Selection background color
window.selectionFgColor = '#000000';   // Selection text color

// qandy.js variables

window.devteam=1;  // developer mode
window.run="";
window.RAM="";           // Current file content in memory
window.RAMFILE="";       // Current filename loaded in RAM
window.RAMTYPE="";       // Current file type (js, txt, etc)

window.paginationEnabled = true;  // Enable/disable pagination feature
window.paginationPaused = false;  // Is print() currently paused?
window.paginationBuffer = [];     // Queued text waiting to be printed
window.paginationLinesBeforePause = 25;  // Lines to show before pausing
window.inInputMode = false;       // True when processing user input (prevents pagination)
